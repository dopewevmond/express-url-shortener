doctype html 
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='Some description')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title URL shortener - QR Code
        link(rel='stylesheet', type='text/css', href='/public/styles.css')
    body
        .container
            h1 QR Code Generator 

            p(style="margin-bottom: 15px; font-size: 0.85rem;") Want to shorten the link instead? 
                a(href="/") Here 

            form(action="/qrcode" method="post")
                label Enter link to create QR Code #[<br />]
                    input(type="text" placeholder="Enter link to create QR Code" name="url" class="input-link")
                br 
                input(type="submit" value="Create QR Code")
            
            if buffer
                .results
                    h2(style="margin: 0 0 5px 20px;") QR Code
                    .qr-container
                      button(class="download-qr" style="padding: 10px 15px; margin-left: 20px; background: orange; color: white; border: none; cursor: pointer;") Copy QR Code SVG
                      div !{buffer}
            
        script(src="/public/qrscript.js") 